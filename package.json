{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:web": "cd apps/web && pnpm run start",
    "db:generate": "cd packages/db && npx prisma generate --schema=./prisma/schema.prisma && cd ../..",
    "db:first-time-setup": "cd packages/db && pnpm run db:deploy && pnpm run db:generate && pnpm run db:seed",
    "start:backend": "cd apps/backend && pnpm run start:backend",
    "start:bullmq": " cd apps/bullmq && pnpm run start:bullmq"
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
